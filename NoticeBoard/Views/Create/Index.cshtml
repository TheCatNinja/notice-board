@model Notice

@{
    ViewData["Title"] = "Create Notice";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.css">
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.js"></script>
    <script src="jquery-3.6.1.min.js"></script>
</head>

<body>

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Notice</h2>
            <hr/>
        </div>
        <!--<div asp-validation-summary="All"></div>

        onclick="return confirm('Are you sure you want to add a notice with the following title: ' + (document.getElementById('name')).value);"
        -->
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" id="name"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control"/>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to Notices</a>
    </div>
</form>

</body>
</html>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}